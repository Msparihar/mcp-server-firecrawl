{
  "name": "@modelcontextprotocol/mcp-server-firecrawl",
  "version": "1.0.0",
  "description": "MCP server for web scraping and content searching using the Firecrawl API",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "mcp-server-firecrawl": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "test": "jest",
    "prepare": "npm run build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "check": "npm run lint && npm run format:check && npm test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "web-scraping",
    "search",
    "firecrawl",
    "ai",
    "server"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/mcp-server-firecrawl.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/mcp-server-firecrawl/issues"
  },
  "homepage": "https://github.com/yourusername/mcp-server-firecrawl#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.1",
    "@types/node": "^22.13.1",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.7.3"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  }
}
